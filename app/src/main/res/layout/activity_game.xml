        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="5">
    <ToggleButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/answer1"/>

    <ToggleButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/answer2"/>

    <ToggleButton
        android:layout_width="match_parent"
